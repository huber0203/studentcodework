<body>
    <h1 class="title">TETRIS</h1>
    
    <div class="game-container">
        <div class="game-board">
            <div class="board-grid" id="gameBoard"></div>
            <div class="game-over" id="gameOver" style="display: none;">
                <h2>遊戲結束!</h2>
                <button class="btn" onclick="resetGame()">重新開始</button>
            </div>
        </div>
        
        <div class="game-info">
            <div class="info-panel">
                <div class="score">分數: <span id="score">0</span></div>
                <div class="level">等級: <span id="level">1</span></div>
            </div>
            
            <div class="next-piece">
                <h3>下一個</h3>
                <div class="next-grid" id="nextPiece"></div>
            </div>
            
            <div class="controls">
                <button class="btn" onclick="resetGame()">重新開始</button>
                <button class="btn" onclick="togglePause()">暫停/繼續</button>
                <button class="btn" onclick="toggleMusic()">音樂開/關</button>
            </div>
            
            <div class="instructions">
                <p>← → 移動</p>
                <p>↓ 快速下降</p>
                <p>↑ 旋轉</p>
                <p>空白鍵 暫停</p>
            </div>
        </div>
    </div>
    
    <audio id="bgMusic" loop>
        <source src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Tetris-kxnh5j7hpNEcFspAndlU2huV5n6dvk.mp3" type="audio/mpeg">
    </audio>

    <script>
        const TETROMINOS = {
            I: { shape: [[1, 1, 1, 1]], color: 'cyan' },
            J: { shape: [[1, 0, 0], [1, 1, 1]], color: 'blue' },
            L: { shape: [[0, 0, 1], [1, 1, 1]], color: 'orange' },
            O: { shape: [[1, 1], [1, 1]], color: 'yellow' },
            S: { shape: [[0, 1, 1], [1, 1, 0]], color: 'green' },
            T: { shape: [[0, 1, 0], [1, 1, 1]], color: 'purple' },
            Z: { shape: [[1, 1, 0], [0, 1, 1]], color: 'red' },
        };

        const BOARD_WIDTH = 10;
        const BOARD_HEIGHT = 20;
        const INITIAL_DROP_TIME = 800;
        const SPEED_INCREASE_FACTOR = 0.95;

        let board = [];
        let currentPiece = null;
        let nextPiece = null;
        let score = 0;
        let level = 1;
        let gameOver = false;
        let isPaused = false;
        let dropTime = INITIAL_DROP_TIME;
        let dropInterval = null;
        let isMusicPlaying = false;

        function createEmptyBoard() {
            return Array.from({ length: BOARD_HEIGHT }, () => Array(BOARD_WIDTH).fill(0));
        }

        function randomTetromino() {
            const keys = Object.keys(TETROMINOS);
            const randKey = keys[Math.floor(Math.random() * keys.length)];
            return { ...TETROMINOS[randKey], type: randKey };
        }

        function initGame() {
            board = createEmptyBoard();
            currentPiece = null;
            nextPiece = randomTetromino();
            score = 0;
            level = 1;
            gameOver = false;
            isPaused = false;
            dropTime = INITIAL_DROP_TIME;
            updateDisplay();
            spawnNewPiece();
            startGameLoop();
        }

        function createBoard() {
            const gameBoard = document.getElementById('gameBoard');
            gameBoard.innerHTML = '';
            
            for (let y = 0; y < BOARD_HEIGHT; y++) {
                for (let x = 0; x < BOARD_WIDTH; x++) {
                    const cell = document.createElement('div');
                    cell.className = 'cell';
                    cell.id = `cell-${x}-${y}`;
                    gameBoard.appendChild(cell);
                }
            }
        }

        function updateDisplay() {
            document.getElementById('score').textContent = score;
            document.getElementById('level').textContent = level;
            
            // 更新遊戲板
            for (let y = 0; y < BOARD_HEIGHT; y++) {
                for (let x = 0; x < BOARD_WIDTH; x++) {
                    const cell = document.getElementById(`cell-${x}-${y}`);
                    cell.className = 'cell';
                    
                    if (board[y][x]) {
                        cell.classList.add('filled', board[y][x]);
                    }
                }
            }
            
            // 顯示當前方塊
            if (currentPiece) {
                drawPiece(currentPiece);
            }
            
            // 顯示下一個方塊
            drawNextPiece();
        }

        function drawPiece(piece) {
            piece.shape.forEach((row, y) => {
                row.forEach((value, x) => {
                    if (value) {
                        const boardX = piece.x + x;
                        const boardY = piece.y + y;
                        if (boardX >= 0 && boardX < BOARD_WIDTH && boardY >= 0 && boardY < BOARD_HEIGHT) {
                            const cell = document.getElementById(`cell-${boardX}-${boardY}`);
                            if (cell) {
                                cell.classList.add('filled', piece.color);
                            }
                        }
                    }
                });
            });
        }

        function drawNextPiece() {
            const nextGrid = document.getElementById('nextPiece');
            nextGrid.innerHTML = '';
            
            for (let i = 0; i < 16; i++) {
                const cell = document.createElement('div');
                cell.className = 'next-cell';
                nextGrid.appendChild(cell);
            }
            
            if (nextPiece) {
                nextPiece.shape.forEach((row, y) => {
                    row.forEach((value, x) => {
                        if (value) {
                            const index = y * 4 + x;
                            const cell = nextGrid.children[index];
                            if (cell) {
                                cell.classList.add('filled', nextPiece.color);
                            }
                        }
                    });
                });
            }
        }

        function checkCollision(x, y, shape) {
            for (let row = 0; row < shape.length; row++) {
                for (let col = 0; col < shape[row].length; col++) {
                    if (shape[row][col] !== 0) {
                        const newX = x + col;
                        const newY = y + row;
                        if (newX < 0 || newX >= BOARD_WIDTH || newY >= BOARD_HEIGHT || 
                            (newY >= 0 && board[newY][newX] !== 0)) {
                            return true;
                        }
                    }
                }
            }
            return false;
        }

        function isValidMove(x, y, shape) {
            return !checkCollision(x, y, shape);
        }

        function moveLeft() {
            if (currentPiece && isValidMove(currentPiece.x - 1, currentPiece.y, currentPiece.shape)) {
                currentPiece.x--;
                updateDisplay();
            }
        }

        function moveRight() {
            if (currentPiece && isValidMove(currentPiece.x + 1, currentPiece.y, currentPiece.shape)) {
                currentPiece.x++;
                updateDisplay();
            }
        }

        function moveDown() {
            if (!currentPiece || gameOver || isPaused) return;
            
            if (isValidMove(currentPiece.x, currentPiece.y + 1, currentPiece.shape)) {
                currentPiece.y++;
                updateDisplay();
            } else {
                placePiece();
            }
        }

        function rotate() {
            if (!currentPiece || gameOver || isPaused) return;
            
            const rotated = currentPiece.shape[0].map((_, i) =>
                currentPiece.shape.map(row => row[i]).reverse()
            );
            
            let newX = currentPiece.x;
            let newY = currentPiece.y;

            if (!isValidMove(newX, newY, rotated)) {
                if (isValidMove(newX - 1, newY, rotated)) {
                    newX -= 1;
                } else if (isValidMove(newX + 1, newY, rotated)) {
                    newX += 1;
                } else if (isValidMove(newX, newY - 1, rotated)) {
                    newY -= 1;
                } else {
                    return;
                }
            }

            currentPiece.x = newX;
            currentPiece.y = newY;
            currentPiece.shape = rotated;
            updateDisplay();
        }

        function placePiece() {
            if (!currentPiece) return;
            
            currentPiece.shape.forEach((row, y) => {
                row.forEach((value, x) => {
                    if (value !== 0) {
                        const boardY = y + currentPiece.y;
                        const boardX = x + currentPiece.x;
                        if (boardY >= 0 && boardY < BOARD_HEIGHT && boardX >= 0 && boardX < BOARD_WIDTH) {
                            board[boardY][boardX] = currentPiece.color;
                        }
                    }
                });
            });
            
            clearLines();
            spawnNewPiece();
        }

        function clearLines() {
            let linesCleared = [];
            
            for (let y = BOARD_HEIGHT - 1; y >= 0; y--) {
                if (board[y].every(cell => cell !== 0)) {
                    linesCleared.push(y);
                    
                    // 添加清除動畫
                    for (let x = 0; x < BOARD_WIDTH; x++) {
                        const cell = document.getElementById(`cell-${x}-${y}`);
                        if (cell) {
                            cell.classList.add('clearing');
                        }
                    }
                }
            }
            
            if (linesCleared.length > 0) {
                setTimeout(() => {
                    linesCleared.forEach(lineY => {
                        board.splice(lineY, 1);
                        board.unshift(Array(BOARD_WIDTH).fill(0));
                    });
                    
                    score += linesCleared.length * 100 * level;
                    
                    if (Math.floor(score / 500) > level - 1) {
                        level++;
                        dropTime = Math.max(100, dropTime * SPEED_INCREASE_FACTOR);
                        startGameLoop();
                    }
                    
                    updateDisplay();
                }, 500);
            }
        }

        function spawnNewPiece() {
            currentPiece = {
                x: Math.floor(BOARD_WIDTH / 2) - 1,
                y: 0,
                shape: nextPiece.shape,
                color: nextPiece.color
            };
            
            nextPiece = randomTetromino();
            
            if (checkCollision(currentPiece.x, currentPiece.y, currentPiece.shape)) {
                gameOver = true;
                document.getElementById('gameOver').style.display = 'block';
                clearInterval(dropInterval);
            }
            
            updateDisplay();
        }

        function startGameLoop() {
            clearInterval(dropInterval);
            if (!gameOver && !isPaused) {
                dropInterval = setInterval(moveDown, dropTime);
            }
        }

        function resetGame() {
            document.getElementById('gameOver').style.display = 'none';
            initGame();
        }

        function togglePause() {
            isPaused = !isPaused;
            if (isPaused) {
                clearInterval(dropInterval);
            } else {
                startGameLoop();
            }
        }

        function toggleMusic() {
            const music = document.getElementById('bgMusic');
            if (isMusicPlaying) {
                music.pause();
                isMusicPlaying = false;
            } else {
                music.play().catch(e => console.log('音樂播放失敗:', e));
                isMusicPlaying = true;
            }
        }

        // 鍵盤控制
        document.addEventListener('keydown', (e) => {
            if (gameOver) return;
            
            switch (e.key) {
                case 'ArrowLeft':
                    e.preventDefault();
                    moveLeft();
                    break;
                case 'ArrowRight':
                    e.preventDefault();
                    moveRight();
                    break;
                case 'ArrowDown':
                    e.preventDefault();
                    moveDown();
                    break;
                case 'ArrowUp':
                    e.preventDefault();
                    rotate();
                    break;
                case ' ':
                    e.preventDefault();
                    togglePause();
                    break;
            }
        });

        // 初始化遊戲
        window.onload = function() {
            createBoard();
            initGame();
        };
    </script>
</body>
</html>
